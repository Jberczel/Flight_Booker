<h1>Flights</h1>

<%= form_tag flights_path, method: 'get' do %>
<div class="row">
  <%= hidden_field_tag :search %>
  <div class="large-2 columns">From <%= select_tag :from, options_for_select(@airports) %></div>
  <div class="large-2 columns">To <%= select_tag :to, options_for_select(@airports) %></div>
  <div class="large-3 columns">Date <%= select_tag :date, options_for_select(@dates) %></div>
   <div class="large-2 columns">Passengers<%= select_tag :passengers, options_for_select(1..4) %></div>
   <div class="large-3 columns"><%= submit_tag "Search", :name => nil, class: "button" %></div>
</div>
<% end %>



<%= form_tag new_booking_path, method: 'get' do %>
<div class="row">
    <% @flights.each do |flight| %>
      <%= radio_button_tag :flight_id, flight.id %>
      <%= "Flight ##{flight.id}" %>
      <br>
     
    <% end %>
    <%= submit_tag "Select Flight", :name => nil, class: "button" %>
    <%= hidden_field_tag :passengers, params[:passengers] %>

</div>
<% end %>
